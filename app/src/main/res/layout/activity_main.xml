<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/WorkingsTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ResultsTV"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="45dp"
        app:layout_constrainedWidth="true"
        android:lines="2"
        android:maxLines="2"

        />

    <TextView
        android:id="@+id/ResultsTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/WorkingsTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Flow"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        android:textAlignment="textEnd"
        android:textSize="45dp"
        android:textColor="@color/grey"
        android:text=""
        />


    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/Flow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="button1, button2, button3, button4, button5, button6, button7, button8, button9, button10, button11, button12, button13, button14, button15, button16, button18, button19, button20,button21"
        app:flow_horizontalStyle="spread"
        app:flow_maxElementsWrap="4"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ResultsTV"
        app:layout_constraintVertical_bias="0.502"
        app:flow_verticalGap="20dp"/>

    <Button
        style="@style/buttonNumber"
        android:id="@+id/button1"
        android:text="C"
        android:backgroundTint="@color/red"
        android:textColor="@color/black"
        android:onClick="allClearAction"
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"
        />
    <Button
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"
        style="@style/buttonOperator"
        android:text="âŒ«"
        android:id="@+id/button2"
        android:textColor="@color/green"
        android:onClick="backSpaceAction"
        />
    <Button
        style="@style/buttonOperator"
        android:id="@+id/button3"
        android:text="."
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"/>
    <Button
        style="@style/buttonOperator"
        android:id="@+id/button4"
        android:text="/"
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"/>
    <Button
        style="@style/buttonNumber"
        android:id="@+id/button5"
        android:text="7"
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"/>
    <Button
        style="@style/buttonNumber"
        android:id="@+id/button6"
        android:text="8"
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"/>
    <Button
        style="@style/buttonNumber"
        android:id="@+id/button7"
        android:text="9"
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"/>
    <Button
        style="@style/buttonOperator"
        android:id="@+id/button8"
        android:text="x"
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"/>
    <Button
        style="@style/buttonNumber"
        android:id="@+id/button9"
        android:text="4"
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"/>
    <Button
        style="@style/buttonNumber"
        android:id="@+id/button10"
        android:text="5"
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"/>
    <Button
        style="@style/buttonNumber"
        android:id="@+id/button11"
        android:text="6"
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"/>
    <Button
        style="@style/buttonOperator"
        android:id="@+id/button12"
        android:text="-"
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"/>
    <Button
        style="@style/buttonNumber"
        android:id="@+id/button13"
        android:text="1"
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"/>
    <Button
        style="@style/buttonNumber"
        android:id="@+id/button14"
        android:text="2"
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"/>
    <Button
        style="@style/buttonNumber"
        android:id="@+id/button15"
        android:text="3"
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"/>
    <Button
        style="@style/buttonOperator"
        android:id="@+id/button16"
        android:text="+"
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"
        />

    <Button
        style="@style/buttonOperator"
        android:id="@+id/button18"
        android:text="0"
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"
        />
    <Button
        style="@style/buttonOperator"
        android:id="@+id/button19"
        android:text="("
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"
        />
    <Button
        style="@style/buttonOperator"
        android:id="@+id/button20"
        android:text=")"
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"
        />

    <Button
        style="@style/buttonOperator"
        android:id="@+id/button21"
        android:text="="
        android:backgroundTint="@color/green"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/Flow"
        app:layout_constraintTop_toTopOf="@id/Flow"
        android:onClick="equalsAction"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
